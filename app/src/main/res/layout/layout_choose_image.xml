<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_shade_1"
    tools:context=".ChoseImageActivity">
    <ImageView
        android:id="@+id/imgChoseImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/image" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/imgChoseImage"
        android:id="@+id/tvDetectChoseImage"
        android:textColor="@color/yellow"
        android:text="Your result will appear here"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="4dp"
        />
    <Button
        android:id="@+id/btnChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDetectChoseImage"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:text="Choose"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        app:backgroundTint="@color/yellow"/>
    <Button
        android:id="@+id/btnDetectChoseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChoose"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:text="Detect"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        app:backgroundTint="@color/yellow"/>
    <Button
        android:id="@+id/btnComeBackFromChoseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDetectChoseImage"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:text="Come Back"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        app:backgroundTint="@color/yellow"/>
</RelativeLayout>